{
  "name": "impact-im-tool-optimized",
  "version": "2.0.0",
  "private": true,
  "description": "Firebase Studio IMPACT IM Tool with Performance Optimizations",
  "scripts": {
    "dev": "npx next dev --turbopack --port 9002 --hostname 0.0.0.0",
    "dev:local": "next dev --turbopack",
    "genkit:dev": "npx genkit start -- npx tsx src/ai/dev.ts", 
    "genkit:watch": "npx genkit start -- npx tsx --watch src/ai/dev.ts",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "analyze": "cross-env ANALYZE=true next build",
    "lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./reports/lighthouse-report.html",
    "perf-test": "npm run build && npm run lighthouse",
    "bundle-size": "npx bundlesize",
    "test:deps": "npm audit && npm outdated",
    "clean": "rm -rf .next node_modules package-lock.json",
    "reinstall": "npm run clean && npm install",
    "firebase:deploy": "firebase deploy",
    "firebase:serve": "firebase serve"
  },
  "dependencies": {
    "@genkit-ai/googleai": "^1.13.0",
    "@genkit-ai/next": "^1.13.0", 
    "@hookform/resolvers": "^4.1.3",
    "@radix-ui/react-accordion": "^1.2.3",
    "@radix-ui/react-alert-dialog": "^1.1.6",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-toast": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.1.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "firebase": "^11.9.1",
    "genkit": "^1.13.0",
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.8.2",
    "lucide-react": "^0.475.0",
    "next": "15.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.54.2",
    "tailwind-merge": "^3.0.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.24.2",
    "@vercel/analytics": "^1.3.1",
    "@vercel/speed-insights": "^1.0.12",
    "web-vitals": "^4.2.3"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18", 
    "@types/react-dom": "^18",
    "genkit-cli": "^1.13.0",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "@next/bundle-analyzer": "^15.3.3",
    "webpack-bundle-analyzer": "^4.10.2",
    "cross-env": "^7.0.3",
    "lighthouse": "^12.0.0",
    "bundlesize": "^0.18.1",
    "tsx": "^4.16.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "bundlesize": [
    {
      "path": ".next/static/js/*.js",
      "maxSize": "250 KB"
    },
    {
      "path": ".next/static/css/*.css", 
      "maxSize": "50 KB"
    }
  ]
}
